<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="Timing" level="info"/>
    <logger name="com.ww.dtable.services" level="info"/>
    <logger name="com.ww.dtable.routes.Routes" level="info"/>
    <logger name="com.ww.dtable.routes" level="info"/>
    <logger name="com.ww.dtable.utils" level="info"/>
    <logger name="com.ww.dtable.dao" level="info"/>

</configuration>
